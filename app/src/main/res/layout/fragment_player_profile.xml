<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_container"
    android:background="@color/lightgreen"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/lightgreen"
    tools:context="com.example.qr_go.Fragments.Profile.PlayerProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/username_text"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/contact_text"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/total_score_text"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/total_scanned_text"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical"
            android:textSize="30sp" />
        <!-- android:backgroundTint="@color/richblack
        android:textColor="@color/beige"" -->
        <Button
            android:id="@+id/my_qr_codes_button"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:gravity="center_vertical"
            android:text="QR Codes"
            android:textSize="30sp" />



    </LinearLayout>

</FrameLayout>